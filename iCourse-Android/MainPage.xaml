<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="iCourse_Android.MainPage"
             xmlns:local ="clr-namespace:iCourse_Android">

    <VerticalStackLayout
        Spacing="25"
        Padding="30,60,30,30"
        VerticalOptions="Center">

        <Entry
            Placeholder="用户名"
            x:Name="usernameEntry"
            Keyboard="Email" />

        <Entry
            Placeholder="密码"
            x:Name="passwordEntry"
            IsPassword="True" />

        <Button
            Text="Login"
            Clicked="OnLoginButtonClicked" />
    </VerticalStackLayout>
</ContentPage>
