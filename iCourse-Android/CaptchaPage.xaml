<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="iCourse_Android.CaptchaPage"
             Title="CaptchaPage">
    <VerticalStackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
        <Image x:Name="captchaImage" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" />
        <Entry x:Name="captchaInput" Placeholder="请输入验证码" HorizontalOptions="CenterAndExpand" WidthRequest="200" />
        <Button Text="验证" Clicked="Button_Clicked" HorizontalOptions="CenterAndExpand" />
    </VerticalStackLayout>
</ContentPage>